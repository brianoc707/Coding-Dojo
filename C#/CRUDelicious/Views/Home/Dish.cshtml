
<h1>Add a new Dish</h1>
<p><a href="/">Home</a></p>
@model Dish
 <form action ="/Add" method="post">
        <div class= "form-group">
        <span asp-validation-for="Name" class="text-danger"></span>
        <label  asp-for="Name"></label>
        <input class = "form-control" asp-for="Name">
        </div>
        <div class="form-group">
        <span asp-validation-for="Chef" class="text-danger"></span>
        <label asp-for="Chef"></label>
        <input class = "form-control" asp-for="Chef">
        </div>
        <p>Tastiness</p>
        <span asp-validation-for="Tastiness" class="text-danger"></span>
        <select asp-for="Tastiness">
        <option value = "1">1</option>
        <option value = "2">2</option>
        <option value = "3">3</option>
        <option value = "4">4</option>
        <option value = "5">5</option>
        </select>
         <div class="form-group">
        <span asp-validation-for="Calories" class="text-danger"></span>
        <label asp-for="Calories"></label> 
        <input class = "form-control"asp-for="Calories">
        </div>
         <div class="form-group">
        <span asp-validation-for="Description" class="text-danger"></span>
        <label asp-for="Description"></label> 
        <input class = "form-control"asp-for="Description">
        </div>
        <div>
            <input type="submit" value="Add a Dish">
        </div>
      
    </form>
